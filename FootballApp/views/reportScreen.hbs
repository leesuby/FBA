<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/reportResult.css">
</head>
<body>
    <section>
<h1><a href='/result'>Báo cáo giải đấu</a></h1>


<form method="POST" action="/result">
    <label for="staticEmail" class="col-sm-2 col-form-label" style="color:lightcyan">Chọn ngày: </label>
    <input type="datetime" id="datepicker" width="276" style="display:inline;margin-left:15px" name="datepicker"/>

    <div class="center">
        <button style="border-radius:10px;background-color:royalblue;color:white" type="submit">Lập báo cáo</button>
    </div>
</form>

{{#if reportResult}}
{{#if notDateInput}}
<h2 style="text-align: center; color:lightcyan">Xin hãy nhập vào ngày muốn báo cáo</h1>
{{else}}
<div id="resultPart">
    <h1 style="text-align: center; color:lightcyan">Bảng xếp hạng</h1>
    <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Đội bóng</th>
          <th>Thắng</th>
          <th>Hòa</th>
          <th>Thua</th>
          <th>Hiệu số</th>
          <th>Hạng</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
          <tr>
            <td>Manchester United</td>
            <td>11</td>
            <td>0</td>
            <td>0</td>
            <td>11</td>
            <td>1</td>
          </tr>
       
      </tbody>
    </table>
  </div>    
  <div>
    <nav aria-label="Page navigation example">
      <ul class="pagination" >
            <li class="page-item">
                {{#if this.firstPage}}
                    <a class="page-link disabled" style="cursor: not-allowed; color: black;">Previous</a>
                {{else}}
                    <a class="page-link" href="?page={{this.previousPage}}">Previous</a>
                {{/if}}
            </li>
            {{#each this.pageNumbers}}
                {{#if isCurrent}}
                    <li class="page-item active" >
                        <a class="page-link" href="javascript:;" style="color: blue;">{{value}}</a>
                    </li>
                {{else}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{value}}">{{value}}</a>
                    </li>
                {{/if}}
            {{/each}}
            <li class="page-item">
                {{#if this.lastPage}}
                    <a class="page-link" style="cursor: not-allowed; color: black;">Next</a>
                {{else}}
                    <a class="page-link" href="?page={{this.nextPage}}">Next</a>
                {{/if}}
            </li>
        </ul>
    </nav>
  </div>

</div>
{{/if}}
{{/if}}


</section>
</body>
</html>

<script>
        $('#datepicker').datepicker({
            uiLibrary: 'bootstrap4'
        });
</script>