<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Fixed table header</title>
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">

  
      <link rel="stylesheet" href="/viewPlayer.css">

  
</head>

<body>
  <section>
  <!--for demo wrap-->

  <div class="buttons">
    <button href="/player">Tìm kiếm</button>
    <button>Làm mới</button>
  </div>
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Mã Cầu Thủ</th>
          <th>Tên cầu thủ</th>
          <th>Đội bóng</th>
          <th>Loại cầu thủ</th>
          <th>Tổng số bàn thắng</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        {{#each this.players}}
          <tr>
            <td>{{MaCauThu}}</td>
            <td>{{TenCauThu}}</td>
            <td>{{DoiBong}}</td>
            <td>{{LoaiCauThu}}</td>
            <td>{{TongBanThang}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div>
    <nav aria-label="Page navigation example">
      <ul class="pagination" >
            <li class="page-item">
                {{#if this.firstPage}}
                    <a class="page-link disabled" style="cursor: not-allowed; color: black;">Previous</a>
                {{else}}
                    <a class="page-link" href="?page={{this.previousPage}}">Previous</a>
                {{/if}}
            </li>
            {{#each this.pageNumbers}}
                {{#if isCurrent}}
                    <li class="page-item active" >
                        <a class="page-link" href="javascript:;" style="color: blue;">{{value}}</a>
                    </li>
                {{else}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{value}}">{{value}}</a>
                    </li>
                {{/if}}
            {{/each}}
            <li class="page-item">
                {{#if this.lastPage}}
                    <a class="page-link" style="cursor: not-allowed; color: black;">Next</a>
                {{else}}
                    <a class="page-link" href="?page={{this.nextPage}}">Next</a>
                {{/if}}
            </li>
        </ul>
    </nav>
  </div>
  
</section>


<!-- follow me template -->
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script src="js/index.js"></script>

</body>
</html>
