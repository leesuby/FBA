<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
  <link rel="stylesheet" href="/layout.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  <form method="GET" action="/search">
    <nav class="d-flex justify-content-between">
      <a class="header__logo hide-for-mobile flex flex-ai-c" href="/">
        <img style="width: 30%;margin-left: 15px;margin-top: 10px;" class="img-fluid" src="/images/logo_ver1.png" />
      </a>

      <div class="btn-group" style="height: 30%;  margin-right:40px ">
        <button id="typeButton" type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false" style="margin: 15px; margin-top:30px ">
          Đội bóng
        </button>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="#" onclick="change1()">Cầu thủ</a>
          <a class="dropdown-item" href="#" onclick="change2()">Đội bóng</a>
        </div>

        <input id="typeSearch" type="hidden" name="category" value="Player">
      </div>

      <div class="input-group rounded " style="width: 70%; margin-top:30px; margin-bottom: 0px;margin-right:60px">
        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
          aria-describedby="search-addon" name="keyword" />
        <button class="btn btn-info" style=" margin-top:0px; margin-left:0px;" type="submit">
          <i class="fa fa-search" aria-hidden="true" style="padding:5px 10px; color:white"></i>
        </button>
      </div>

      <i style="margin-right: 15px;margin: 20px 20px; color:aliceblue" class="fa fa-user-circle fa-3x"
        aria-hidden="true"></i>
    </nav>

  </form>

  <hr style="border: 0;
  clear:both;
  display:block;
  width: 100%;               
  background-color:antiquewhite;
  height: 1px;
  margin-top: 0px" />

  {{{body}}}


</body>

<script>
  function change1() // no ';' here
  {
    var type = document.getElementById("typeButton");
    var typeValue = document.getElementById("typeSearch");
    type.value = "Cầu thủ";
    type.innerHTML = "Cầu thủ";
    typeValue.value="Player";
  }

  function change2() // no ';' here
  {
    var type = document.getElementById("typeButton");
    var typeValue = document.getElementById("typeSearch");
    type.value = "Đội bóng";
    type.innerHTML = "Đội bóng";
    typeValue.value="Team";

  }
</script>

</html>